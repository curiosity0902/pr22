<Page x:Class="pr22.Pages.MainMenuPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:pr22.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainMenuPage">
    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>


        <TextBlock Grid.Column="2"
Grid.Row="1"
Text="ГЛАВНАЯ СТРАНИЦА"
TextWrapping="Wrap"
FontSize="30"
FontWeight="DemiBold"
HorizontalAlignment="Center"
VerticalAlignment="Center"/>

        <Button x:Name="WorkersBtn"
Content="Сотрудники"
FontSize="24"
Grid.Column="1"
Grid.ColumnSpan="1"
Grid.Row="3"
Height="50"
Click="WorkersBtn_Click" Margin="10"/>

        <Button x:Name="PlanBtn"
Content="План"
FontSize="24"
Grid.Column="3"
Grid.ColumnSpan="1"
Grid.Row="3"
Height="50"
Click="PlanBtn_Click" Margin="10"/>
    </Grid>
</Page>
